# Wrangler Configuration Template
# Copy this to wrangler.toml and fill in your values
# Note: wrangler.toml is gitignored to prevent accidental secret exposure

name = "quartier"
compatibility_date = "2024-01-01"
pages_build_output_dir = "dist"

# KV Namespace for sessions and file caching
# Create with: wrangler kv:namespace create QUARTIER_KV
[[kv_namespaces]]
binding = "QUARTIER_KV"
id = "your-kv-namespace-id-here"

# Preview environment (optional, for testing)
[env.preview]
[[env.preview.kv_namespaces]]
binding = "QUARTIER_KV"
id = "your-preview-kv-namespace-id-here"

# Production environment
[env.production]
[[env.production.kv_namespaces]]
binding = "QUARTIER_KV"
id = "your-production-kv-namespace-id-here"

# Environment variables are configured via Cloudflare Dashboard
# or using: wrangler pages secret put <KEY>
# Required secrets:
# - GITHUB_CLIENT_ID
# - GITHUB_CLIENT_SECRET
# - UPSTASH_REDIS_REST_URL
# - UPSTASH_REDIS_REST_TOKEN
# - QUARTIER_WEBHOOK_SECRET
# - VITE_GOOGLE_CLIENT_ID (For Google Drive support)

# Build configuration
[build]
command = "npm run build"
